<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvResult"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="70dp"
        android:textAlignment="textEnd"
        android:textColor="@color/white"
        android:textSize="56sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <Button
        android:id="@+id/btnClear"
        android:layout_width="90dp"
        android:layout_height="90dp"
        style="@style/clear"
        android:text="@string/clear"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvResult"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:onClick="clearEvent"/>

    <Button
        android:id="@+id/btnPlusMinus"
        android:layout_width="90dp"
        android:layout_height="90dp"
        style="@style/clear"
        android:text="@string/plus_minus"
        android:textSize="40sp"
        app:layout_constraintTop_toTopOf="@id/btnClear"
        app:layout_constraintStart_toEndOf="@id/btnClear"
        android:layout_marginStart="10dp"
        android:onClick="numberEvent"/>

    <Button
        android:id="@+id/percent"
        android:layout_width="90dp"
        android:layout_height="90dp"
        style="@style/clear"
        android:text="@string/percent"
        app:layout_constraintTop_toTopOf="@id/btnPlusMinus"
        app:layout_constraintStart_toEndOf="@id/btnPlusMinus"
        android:layout_marginStart="10dp"
        android:onClick="percentEvent"/>
    <Button
        android:id="@+id/div"
        android:layout_width="90dp"
        android:layout_height="90dp"
        style="@style/math_sign"
        android:text="@string/div"
        app:layout_constraintTop_toTopOf="@id/percent"
        app:layout_constraintStart_toEndOf="@id/percent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:onClick="operatorEvent"/>
    <Button
        android:id="@+id/btn7"
        android:layout_width="90dp"
        android:layout_height="90dp"
        style="@style/number"
        android:text="@string/_7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnClear"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:onClick="numberEvent"/>
    <Button
        android:id="@+id/btn8"
        android:layout_width="90dp"
        android:layout_height="90dp"
        style="@style/number"
        android:text="@string/_8"
        app:layout_constraintTop_toTopOf="@id/btn7"
        app:layout_constraintStart_toEndOf="@id/btn7"
        android:layout_marginStart="10dp"
        android:onClick="numberEvent"/>
    <Button
        android:id="@+id/btn9"
        android:layout_width="90dp"
        android:layout_height="90dp"
        style="@style/number"
        android:text="@string/_9"
        app:layout_constraintTop_toTopOf="@id/btn8"
        app:layout_constraintStart_toEndOf="@id/btn8"
        android:layout_marginStart="10dp"
        android:onClick="numberEvent"/>
    <Button
        android:id="@+id/mul"
        android:layout_width="90dp"
        android:layout_height="90dp"
        style="@style/math_sign"
        android:text="@string/multil"
        app:layout_constraintTop_toTopOf="@id/btn9"
        app:layout_constraintStart_toEndOf="@id/btn9"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:onClick="operatorEvent"/>
    <Button
        android:id="@+id/btn4"
        android:layout_width="90dp"
        android:layout_height="90dp"
        style="@style/number"
        android:text="@string/_4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn7"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:onClick="numberEvent"/>
    <Button
        android:id="@+id/btn5"
        android:layout_width="90dp"
        android:layout_height="90dp"
        style="@style/number"
        android:text="@string/_5"
        app:layout_constraintTop_toTopOf="@id/btn4"
        app:layout_constraintStart_toEndOf="@id/btn4"
        android:layout_marginStart="10dp"
        android:onClick="numberEvent"/>
    <Button
        android:id="@+id/btn6"
        android:layout_width="90dp"
        android:layout_height="90dp"
        style="@style/number"
        android:text="@string/_6"
        app:layout_constraintTop_toTopOf="@id/btn5"
        app:layout_constraintStart_toEndOf="@id/btn5"
        android:layout_marginStart="10dp"
        android:onClick="numberEvent"/>
    <Button
        android:id="@+id/minus"
        android:layout_width="90dp"
        android:layout_height="90dp"
        style="@style/math_sign"
        android:text="@string/minus"
        app:layout_constraintTop_toTopOf="@id/btn6"
        app:layout_constraintStart_toEndOf="@id/btn6"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:onClick="operatorEvent"/>
    <Button
        android:id="@+id/btn1"
        android:layout_width="90dp"
        android:layout_height="90dp"
        style="@style/number"
        android:text="@string/_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn4"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:onClick="numberEvent"/>
    <Button
        android:id="@+id/btn2"
        android:layout_width="90dp"
        android:layout_height="90dp"
        style="@style/number"
        android:text="@string/_2"
        app:layout_constraintTop_toTopOf="@id/btn1"
        app:layout_constraintStart_toEndOf="@id/btn1"
        android:layout_marginStart="10dp"
        android:onClick="numberEvent"/>
    <Button
        android:id="@+id/btn3"
        android:layout_width="90dp"
        android:layout_height="90dp"
        style="@style/number"
        android:text="@string/_3"
        app:layout_constraintTop_toTopOf="@id/btn2"
        app:layout_constraintStart_toEndOf="@id/btn2"
        android:layout_marginStart="10dp"
        android:onClick="numberEvent"/>
    <Button
        android:id="@+id/plus"
        android:layout_width="90dp"
        android:layout_height="90dp"
        style="@style/math_sign"
        android:text="@string/plus"
        app:layout_constraintTop_toTopOf="@id/btn3"
        app:layout_constraintStart_toEndOf="@id/btn3"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:onClick="operatorEvent"/>
    <Button
        android:id="@+id/btn0"
        android:layout_width="190dp"
        android:layout_height="90dp"
        style="@style/btn_0"
        android:text="@string/_0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:onClick="numberEvent"/>
    <Button
        android:id="@+id/btnDot"
        android:layout_width="90dp"
        android:layout_height="90dp"
        style="@style/number"
        android:text="@string/dot"
        app:layout_constraintTop_toTopOf="@id/btn0"
        app:layout_constraintStart_toEndOf="@id/btn0"
        android:layout_marginStart="10dp"
        android:onClick="numberEvent"/>
    <Button
        android:id="@+id/equal"
        android:layout_width="90dp"
        android:layout_height="90dp"
        style="@style/math_sign"
        android:text="@string/equal"
        app:layout_constraintTop_toTopOf="@id/btnDot"
        app:layout_constraintStart_toEndOf="@id/btnDot"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:onClick="equalEvent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
